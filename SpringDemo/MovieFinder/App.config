<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    
    <sectionGroup name="spring">
      <section name="context" type="Spring.Context.Support.ContextHandler, Spring.Core"/>
      <section name="objects" type="Spring.Context.Support.DefaultSectionHandler, Spring.Core" />
    </sectionGroup>
    
  </configSections>
  
  <spring>
    <context>
      <!-- tell spring to scan the 'objects.xml' file to populate the IoC container -->
      <resource uri="assembly://MovieFinder/MovieFinder/objects.xml"/>
    </context>
  </spring>
  
</configuration>