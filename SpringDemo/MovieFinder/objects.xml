<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">

  <object name="movieService"
          type="MovieFinder.MovieService, MovieFinder"
          autowire="constructor" />

  <object name="repository"
          type="MovieFinder.MovieRepository, MovieFinder" />

  <object name="consoleTracingInterceptor"
          type="MovieFinder.ConsoleTracingInterceptor, MovieFinder" />

  <object name="retryInterceptor"
          type="MovieFinder.RetryInterceptor, MovieFinder">
    <constructor-arg name="numberOfRetries" value="3" />
  </object>
  
  <object id="proxyCreator" type="Spring.Aop.Framework.AutoProxy.ObjectNameAutoProxyCreator, Spring.Aop">
    <property name="ObjectNames">
      <list>
        <value>*Service</value>
        <value>repository</value>
      </list>
    </property>
    <property name="InterceptorNames">
      <list>
        <value>retryInterceptor</value>
        <value>consoleTracingInterceptor</value>
      </list>
    </property>
  </object>


</objects>